<script>
    // add address
    function addAddress(id){
        const form = document.getElementById('addform')
        const formdata = new FormData(form)
        const address = {}
        formdata.forEach((val,i)=>{
            address[i]=val
    })
    

    fetch(`/addAddress?id=${id}`,{method:"POST",headers: {'Content-Type' : 'application/json'},body:JSON.stringify({address})
}).then(res => res.json()
    .then(data => {
        if(data.success){
            
            Swal.fire({
                title:'Address Added',
                text:'Address Added Successfully',
                icon:'success',
